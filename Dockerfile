# Используйте официальный образ Node.js как базовый
FROM node:16

# Установите рабочую директорию в контейнере
WORKDIR /usr/src/app

# Копируйте файлы 'package.json' и 'package-lock.json' (если доступен)
COPY package*.json ./

# Установите зависимости проекта
RUN npm install

# Определите порт, на котором будет работать приложение
EXPOSE 8080

# Запустите ваше приложение при старте контейнера
CMD [ "npm", "run", "server" ]
